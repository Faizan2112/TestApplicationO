                    android:layout_weight=".11"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/spinner_bg"
                    android:gravity="center"
                    android:completionThreshold="-1"
                    android:hint="height"
                    android:textColor="@android:color/black" />
                />

