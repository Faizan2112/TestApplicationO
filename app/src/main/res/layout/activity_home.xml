                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textSize="@dimen/abc_text_size_menu_material"
                    android:layout_weight=".11"
                    android:gravity="center"
                    android:text="@string/price"
                    />




            </LinearLayout>
            <LinearLayout
