<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/home_manual_size_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight=".72"
    android:background="@drawable/white_background"
    android:orientation="horizontal"
    android:visibility="visible"
    android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--     <ImageView
             android:layout_width="match_parent"
             android:layout_height="0dp"
             android:layout_weight=".35"


             />-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight=".3"
        android:orientation="vertical"
        android:weightSum="1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:gravity="left|center_vertical"
            android:text="@string/length"
            android:textSize="@dimen/abc_text_size_menu_material" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:gravity="left|center_vertical"
            android:text="@string/breadth"
            android:textSize="@dimen/abc_text_size_menu_material" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:gravity="left|center_vertical"
            android:text="@string/height"
            android:textSize="@dimen/abc_text_size_menu_material" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:gravity="left|center_vertical"
            android:text="@string/color"
            android:textSize="@dimen/abc_text_size_menu_material" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:gravity="left|center_vertical"
            android:text="@string/price"
            android:textSize="@dimen/abc_text_size_menu_material" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1"
            android:gravity="left|center_vertical"
            android:text="@string/quantity"
            android:textSize="@dimen/abc_text_size_menu_material" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="15dp"
        android:layout_weight=".7"
        android:orientation="vertical"
        android:weightSum="1">

        <Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight=".1" />

        <Spinner
            android:id="@+id/home_mat_length"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/edit_box_icon_padding4"
            android:layout_weight=".1"
            android:background="@drawable/spinner_bg"
            android:gravity="center"
            android:hint="72"
            android:spinnerMode="dropdown"
            android:textSize="@dimen/abc_text_size_body_1_material"

            />


        <Spinner
            android:id="@+id/home_mat_width"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/edit_box_icon_padding4"
            android:layout_weight=".1"
            android:background="@drawable/spinner_bg"
            android:gravity="center"
            android:hint="32"

            android:spinnerMode="dropdown"
            android:textSize="@dimen/abc_text_size_body_1_material" />

        <Spinner
            android:id="@+id/home_mat_height"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/edit_box_icon_padding4"
            android:layout_weight=".1"
            android:background="@drawable/spinner_bg"
            android:gravity="center"

            android:hint="12"
            android:spinnerMode="dropdown"
            android:textSize="@dimen/abc_text_size_body_1_material"

            />

        <Spinner
            android:id="@+id/home_mat_color"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/edit_box_icon_padding4"
            android:layout_weight=".1"
            android:background="@drawable/spinner_bg"
            android:gravity="center"

            android:hint="Red"
            android:spinnerMode="dropdown"
            android:textSize="@dimen/abc_text_size_body_1_material"

            />

        <TextView
            android:id="@+id/home_mat_price"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/edit_box_icon_padding4"
            android:layout_weight=".1"

            android:gravity="center"
            android:hint="0"

            android:spinnerMode="dropdown"
            android:textSize="@dimen/abc_text_size_body_1_material" />

        <EditText
            android:id="@+id/home_mat_quantity"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="@dimen/edit_box_icon_padding4"
            android:layout_weight=".15"
            android:gravity="center"


            android:hint="0"

            android:spinnerMode="dropdown"
            android:textSize="@dimen/abc_text_size_body_1_material"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>